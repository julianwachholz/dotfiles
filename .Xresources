! ~/.Xresources
!
! jwa
! Nov/13

!!! Mouse
Xcursor.theme: a0x_cur1_light
Xcursor.size:  10

!!! Colors
#include "/home/jwa/.config/Xcolours/night"


!!! Fonts
Xft.dpi:                                96
Xft.antialias:                          true
Xft.hinting:                            true
Xft.hintstyle:                          hintfull


!!! urxvt
URxvt.termName:                         rxvt
URxvt.scrollBar:                        false
URxvt.buffered:                         true
URxvt.cursorColor:                      #dcdcdc
URxvt.borderless:                       true
URxvt.dynamicColors:                    on
URxvt.urgentOnBell:                     true
URxvt*iso14755:                         false
URxvt*iso14755_52:                      false
URxvt*imLocale:                         en_US.UTF-8

URxvt*font:                             xft:terminus:pixelsize=12:antialias=false
!URxvt*font:                             xft:Droid Sans Mono:size=9
!URxvt*font:                             xft:Bitstream Vera Sans Mono-8
URxvt*xftAntialias:                     false
URxvt.depth:                            32
URxvt.background:                       rgba:1a00/1a00/1a00/ef00
!URxvt.transparent:                      true
!URxvt.inheritPixmap:                    true

URxvt.perl-ext-common:                  default,clipboard,url-select
URxvt.url-select.launcher:              firefox
URxvt.url-select.underline:             true
URxvt.keysym.M-u:                       perl:url-select:select_next
URxvt.keysym.M-c:                       perl:clipboard:copy
URxvt.keysym.M-v:                       perl:clipboard:paste
